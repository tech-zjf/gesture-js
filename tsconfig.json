{
  // 确保src目录存在并包含TypeScript源文件
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["dom", "es6", "dom.iterable"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}